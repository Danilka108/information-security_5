<Window    x:Class="InformationSecurity.Views.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="using:InformationSecurity.ViewModels"    Title="Information security"    Width="400"    Height="300"    d:DesignHeight="450"    d:DesignWidth="800"    Icon="/Assets/avalonia-logo.ico"    mc:Ignorable="d">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid>        <StackPanel            HorizontalAlignment="Center"            Orientation="Vertical"            Spacing="10">            <StackPanel                Margin="0,20,0,0"                HorizontalAlignment="Center"                Orientation="Vertical"                Spacing="10">                <Label                    Background="Black"                    Content="Данные для шифровки"                    Foreground="White" />                <TextBox Watermark="Ключ" />                <TextBox Watermark="Пароль" />            </StackPanel>            <Button                Margin="0,20,0,0"                HorizontalAlignment="Center"                Content="Шифрование/Дешифрование" />            <StackPanel                Margin="0,20,0,0"                HorizontalAlignment="Center"                Orientation="Vertical"                Spacing="10">                <Label                    Background="Black"                    Content="Итоговая строка"                    Foreground="White" />                <Button HorizontalAlignment="Center" Content="Вывод в двоичном виде" />            </StackPanel>        </StackPanel>    </Grid></Window>