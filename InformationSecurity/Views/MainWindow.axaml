<Window    x:Class="InformationSecurity.Views.MainWindow"    xmlns="https://github.com/avaloniaui"    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    xmlns:vm="using:InformationSecurity.ViewModels"    Title="Information security"    d:DesignHeight="450"    d:DesignWidth="800"    Icon="/Assets/avalonia-logo.ico"    WindowState="Maximized"    mc:Ignorable="d">    <Design.DataContext>        <vm:MainWindowViewModel />    </Design.DataContext>    <Grid>        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Spacing="10">            <TextBlock Foreground="Red" IsVisible="{Binding IsErrorMessageExists}" Text="{Binding ErrorMessage}" />            <Label Content="Тип данных" Target="{Binding ElementName=SelectedDataKind}" />            <ComboBox x:Name="SelectedDataKind" SelectedIndex="{Binding SelectedDataKindIndex}">                <ComboBoxItem>                    <TextBlock LineHeight="24" Text="HEX" />                </ComboBoxItem>                <ComboBoxItem>                    <TextBlock LineHeight="24" Text="Char" />                </ComboBoxItem>            </ComboBox>            <TextBlock Text="Данные для шифрования/дешифрования" />            <Label Target="{Binding ElementName=Key}">Ключ</Label>            <TextBox Text="{Binding Key, Mode=TwoWay}" x:Name="Key" />            <Label Target="{Binding ElementName=Message}">Сообщение</Label>            <TextBox x:Name="Message" Text="{Binding Message, Mode=TwoWay}" />            <Label Target="{Binding ElementName=PathToFile}">Путь до файла</Label>            <TextBox x:Name="PathToFile" Text="{Binding PathToFile, Mode=TwoWay}" />            <Label Content="Прочитать из файла:" Target="{Binding ElementName=FileKind}" />            <ComboBox x:Name="FileKind" HorizontalAlignment="Stretch"                      SelectedIndex="{Binding SelectedFileKindIndex}">                <ComboBoxItem>                    <TextBlock LineHeight="24" Text="Ключ" TextAlignment="Left" />                </ComboBoxItem>                <ComboBoxItem>                    <TextBlock LineHeight="24" Text="Cообщение" TextAlignment="Left" />                </ComboBoxItem>            </ComboBox>            <Label Target="{Binding ElementName=Result}">Результат</Label>            <TextBox x:Name="Result" Margin="0 4" Text="{Binding Result}" />            <Label Target="{Binding ElementName=HexResult}">Результат в hex</Label>            <TextBox x:Name="HexResult" Margin="0 4" Text="{Binding HexResult}" />            <Label Target="{Binding ElementName=HexResult}">Результат в bin</Label>            <TextBox x:Name="BinResult" Margin="0 4" Text="{Binding BinResult}" />            <Button                HorizontalAlignment="Center"                Command="{Binding ReadFromFile}"                Content="Прочитать из файла" />            <Button                Margin="0,15,0,0"                HorizontalAlignment="Center"                Command="{Binding EncryptOrDecrypt}"                Content="Зашифровать/Дешифровать" />        </StackPanel>    </Grid></Window>